$btnBackground = #9BF78E
$navBackground = #000000


body
  padding 0px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color #00B7FF

.awesome-form
  margin 0 auto
  width 50%

.input-desc
  label
    width 25%
    display inline-block
    text-align right
    padding-right 5%

  input
    width 50%
    padding 1% 0.25em

.submit-area
  text-align center
.btn
  background-color $btnBackground
  margin-top 2em
  padding 1em 2%

nav
  width 100px
  height 100px
  background-color $navBackground
